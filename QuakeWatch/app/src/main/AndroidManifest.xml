<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.markus.quakewatch" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-feature
        android:name="android.hardware.location.gps"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity" android:screenOrientation="portrait">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Formular_jetzt"
            android:label="@string/title_activity_formular"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Formular_frueher"
            android:label="@string/title_activity_formular"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Comics"
            android:label="@string/title_activity_comics"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Zusatzfragen"
            android:label="@string/title_activity_zusatz"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Detail"
            android:label="@string/title_activity_detail"
            android:screenOrientation="portrait">
        </activity>
        <activity
            android:name=".Formular_beben"
            android:label="@string/title_activity_formular3"
            android:screenOrientation="portrait">
        </activity>
    </application>

</manifest>